<?xml version="1.0" encoding="UTF-8"?>
<c:config xmlns:c="http://www.sourceid.org/2004/05/config">
    <c:item name="PingFederateDSJNDIName">PFDefaultDS</c:item>
    <!--
    maximum number of items to query during searching of clients using JDBC.
    Oracle has a limit of 1000 items per IN clause
    -->
    <c:item name="items-requested-limit">500</c:item>
    <!--
    Gives the Oracle JDBC driver a hint as to the number of rows that should be fetched
    from the database when more rows are needed for ResultSet objects generated by the Statement.
    If the value specified is zero, then the hint is ignored. The default value is 1000.
    This configuration is only applicable when fetching all OAuth Clients from the database.
    -->
    <c:item name="oracle-fetch-size">1000</c:item>
</c:config>
